
$max-width = 1230px
$min-width = 620px
$bluecolor = #317fb4
$edit = #c2fcc4

@import url('fonts/museo/font.css')
@import url('fonts/ptserif/font.css')

body
	padding 0
	margin 0
	font-family 'Museo'
	font-size 16px
	font-weight 300
	line-height 24px
	background #222
	color #fff
.clearfix:after{
	content "."
	display block
	height 0
	visibility hidden
	clear both
}
ul,li
	margin 0
	padding 0
	list-style-type none
a
	text-decoration none
	color #fff
	border-bottom none
	padding-bottom 1px

.global-layout
	max-width $max-width
	min-width $min-width
	margin 0 auto
	padding 30px
	box-sizing border-box
	position relative
.when
	margin-top 10px
.when__date
	font-size: calc( (100vw - 640px)/(1920 - 640) * (64 - 48) + 48px)
	line-height 120%
	font-weight bold
	margin-bottom 5px
.when__time
	font-size 28px
	line-height 1.2em
	font-weight 300
	display inline-block
.when__time:after
	content ""
	display inline-block
	width 10px
	height 10px
	border-radius 10px
	background #FE667B
	vertical-align middle
	margin-left 10px
	margin-right 7px
.when__place
	font-size 28px
	line-height 1.2em
	font-weight 300
	display inline-block
.when__adress
	font-weight 300
	font-style italic
	margin-top 2px
	color #999


.what__description
	font-size 28px
	line-height 1.2em
	font-weight 300
	margin-top 160px
	margin-bottom 7px
.what__title
	font-size: calc( (100vw - 640px)/(1920 - 640) * (88 - 64) + 64px)
	line-height 100%
	font-weight bold
	margin-left -5px
.what__img
	width 220px
	display inline
	vertical-align middle
.who
	font-size 28px
	line-height 1.3em
	font-weight 300
	margin-top 100px
	margin-bottom 7px
	border-top 10px solid blue
	padding-top 30px
	width 70%
	transition-duration .3s
	@media (max-width: 1150px)
		width 100%
.who__item
	margin-top 40px
	width 49%
	float left
	@media (max-width: 860px)
		margin-top 40px
		width 100%
		float left
.who__img
	width 140px
	border-radius 140px
	display block
	float left
	margin-right 30px
.who__name
	font-size 20px
	line-height 30px
	margin-top 40px
	line-height 1em
.who__info
	font-size 16px
	line-height 24px
	font-family 'PT Serif'
	font-style italic
.theme__text
	font-size 28px
	line-height 1.3em
	font-weight 300
	margin-top 100px
	margin-bottom 7px
	border-top 10px solid #FDEA04
	padding-top 30px
	width 55%
	float left
	transition-duration .3s
.theme__img
	width 38%
	float right
	margin-top 100px
.theme__gif
	width 100%
	margin-bottom 10px
.for
	font-size 36px
	line-height 1.3em
	font-weight 300
	margin-top 40px
	margin-bottom 7px
	border-top 10px solid #FB93F8
	padding-top 30px
	width 55%
	transition-duration .3s
.for__item
	margin-top 30px
.for__icon
	width 50px
	display block
	float left
	margin-right 30px
.for__title
	font-size 28px
	line-height 1.3em
	padding-left 80px
.for__info
	font-size 18px
	line-height 1.5em
	font-weight normal
	font-family 'PT Serif'
	font-style italic
	padding-left 80px
.price
	margin-top 100px
	font-size 36px
	line-height 1.2em
	font-weight bold
	width 48%
.price__comment
	font-size 16px
	line-height 22px
	margin-top 5px
	font-weight normal
	font-style italic
	color #999
.price-form
	font-size 28px
	line-height 1.5em
	margin-top 30px
	position relative
.price-form__input
	font-size 28px
	font-family 'Museo'
	line-height 1.5em
	background transparent
	padding-top 10px
	padding-bottom 5px
	margin-bottom 10px
	border none
	border-bottom 1px solid #999
	transition-duration .3s
	width 100%
	color #fff
	&:focus
		outline none
		border-bottom 1px solid #fff
.price-form__submit
	background none
	border 2px solid #fff
	box-sizing border-box
	padding 10px 20px 10px 20px
	font-size 24px
	font-family 'Museo'
	color #fff
	margin-top 20px
	position relative
	display block
	cursor pointer
	float right
	transition-duration .3s
	&:hover
		background #fff
		color #000
.price-form__submit:after
	content ""
	display block
	position absolute
	top 5px
	left 5px
	width 169px
	height 50px
	border-right 2px solid #fff
	border-bottom 2px solid #fff
	z-index -1


